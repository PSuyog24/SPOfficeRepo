@{
    ViewBag.Title = "Home Page";
}

@model Task18.Models.ItemClass

<script>
    function fnSelect() {
        var img = document.getElementById("viewItem");
        var selectedIndex = document.getElementById("SelectedItemName").value;

        if (selectedIndex == "1") {
            img.src = 'Images\rose.jpg';
        }
        else if (selectedIndex == "2") {
            img.src = 'Images\marigold.jpg';
        }
        else if (selectedIndex == "3") {
            img.src = 'Images\tulip.jpg';
        }
    }
</script>

<div class="jumbotron">
    <h1>Task-18</h1>

    <table align="center" class="table table-bordered">
        <tr>
            <td>
                @Html.ListBoxFor(m=>m.SelectedItemName,Model.ItemList, new { Style="width:200px"})
            </td>
            <td>
                <asp:Image id="viewItem" runat="server"></asp:Image>
            </td>
        </tr>
        <tr>
            <td>
                <input type="button" runat="server" value="Get Cost" class="btn btn-primary" onclick="fnSelect();" />
            </td>
            <td>
                @Html.Label("lblCost",new {@class = "label",@style = "display:none"})
            </td>
        </tr>
    </table>
</div>

